<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Данные из Google Sheets</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f5f5f5;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .loader {
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <h1>Данные из Google Sheets</h1>
    <div id="loader" class="loader">Загрузка данных...</div>
    <table id="data-table" style="display: none;">
        <thead>
            <tr id="table-header"></tr>
        </thead>
        <tbody id="table-body"></tbody>
    </table>

    <script>
        // Инициализация Telegram WebApp
        const tg = window.Telegram.WebApp;
        tg.expand();

        // URL вашего Google Sheets в формате JSON
        const SHEET_URL = "https://opensheet.elk.sh/1kgVNeX9LBgomEXl9211qlcB9nDMdtyHVV56YDbB7Y1o/Лист1";

        // Загрузка данных
        async function loadData() {
            try {
                const response = await fetch(SHEET_URL);
                const data = await response.json();
                displayData(data);
            } catch (error) {
                document.getElementById('loader').innerHTML = 
                    'Ошибка загрузки данных: ' + error.message;
            }
        }

        // Отображение данных в таблице
        function displayData(data) {
            if (!data || data.length === 0) {
                document.getElementById('loader').innerHTML = 'Нет данных для отображения';
                return;
            }
            
            const table = document.getElementById('data-table');
            const headerRow = document.getElementById('table-header');
            const tableBody = document.getElementById('table-body');
            
            // Очистка предыдущих данных
            headerRow.innerHTML = '';
            tableBody.innerHTML = '';
            
            // Создание заголовков (берём ключи первого элемента)
            const headers = Object.keys(data[0]);
            headers.forEach(header => {
                const th = document.createElement('th');
                th.textContent = header;
                headerRow.appendChild(th);
            });
            
            // Заполнение данными
            data.forEach(row => {
                const tr = document.createElement('tr');
                headers.forEach(header => {
                    const td = document.createElement('td');
                    td.textContent = row[header] || '';
                    tr.appendChild(td);
                });
                tableBody.appendChild(tr);
            });
            
            // Показываем таблицу
            document.getElementById('loader').style.display = 'none';
            table.style.display = 'table';
        }

        // Загружаем данные при открытии
        loadData();
    </script>
</body>
</html>