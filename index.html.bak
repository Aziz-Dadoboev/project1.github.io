        const SHEET_URL = "https://opensheet.elk.sh/1kgVNeX9LBgomEXl9211qlcB9nDMdtyHVV56YDbB7Y1o/–õ–∏—Å—Ç1";

        // –ò–∫–æ–Ω–∫–∏ –¥–ª—è –¥–µ—Ç–∞–ª–µ–π (–º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å emoji –∏–ª–∏ FontAwesome)
        const icons = {
            location: 'üìç',
